<resources>
    <style name="Theme.MaterialWallet" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/primaryColor</item>
        <item name="colorOnPrimaryContainer">@color/white</item>

        <item name="colorSecondary">@color/primaryColor</item>
        <item name="colorSecondaryVariant">@color/primaryLightColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/primaryColor</item>
        <item name="colorOnSecondaryContainer">@color/white</item>

        <item name="android:statusBarColor">@color/window_background</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:navigationBarColor">#f5f5ff</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="NumericPadButton" parent="@style/Widget.Material3.Button.UnelevatedButton">
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">10pt</item>
        <item name="android:layout_width">85dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/numeric_pad_content_color</item>
        <item name="backgroundTint">@color/window_background</item>
        <item name="cornerRadius">10dp</item>
        <item name="tint">@color/numeric_pad_content_color</item>
    </style>

    <style name="MainButton">
        <item name="textAllCaps">true</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="backgroundTint">@color/window_background</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="TransactButton">
        <item name="backgroundTint">@color/window_background</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>
</resources>