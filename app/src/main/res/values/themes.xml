<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.OpenWallet" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/main_accent</item>
        <item name="colorPrimaryVariant">@color/main_accent</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/main_accent</item>
        <item name="colorSecondaryVariant">@color/main_accent</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="MainMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/main_button_background</item>
        <item name="backgroundTint">@color/main_button_color_states</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/main_button_text_color</item>
        <item name="android:padding">10dp</item>
    </style>
</resources>